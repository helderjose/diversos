{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"semi": 2,
		"no-multiple-empty-lines": [2, {"max" : 1}],
		"no-trailing-spaces": 2,
		"indent": [2, 2]
	}
}